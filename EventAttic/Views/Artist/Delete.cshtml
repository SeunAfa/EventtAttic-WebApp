@using EventAttic.Models
@model Artist

@{
    ViewData["Title"] = "Delete Artist";
}

<div class="" style="padding-bottom:50px;">
    <div class="">
        <div class="col-md-8 offset-2">
            <h1 class="text-white">Delete - @Model.ArtistName</h1>
            <br />
            <div class="form-group text-center" >
                <img class="" style="width:200px;height:200px;" id="ProfilePicturePreview" />
            </div>
            <div class="form-group">
                <label asp-for="ProfilePictureURL" class="control-label text-white"></label>
                <input asp-for="ProfilePictureURL" class="form-control" readonly />
                <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StagePictureURL" class="control-label text-white"></label>
                <input asp-for="StagePictureURL" class="form-control" readonly />
                <span asp-validation-for="StagePictureURL" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ArtistName" class="control-label text-white"></label>
                <input asp-for="ArtistName" class="form-control" readonly />
                <span asp-validation-for="ArtistName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SpotifyPlayList" class="control-label text-white"></label>
                <input asp-for="SpotifyPlayList" class="form-control" readonly />
                <span asp-validation-for="SpotifyPlayList" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="InstaLink" class="control-label text-white"></label>
                <input asp-for="InstaLink" class="form-control" />
                <span asp-validation-for="InstaLink" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TwitterLink" class="control-label text-white"></label>
                <input asp-for="TwitterLink" class="form-control" />
                <span asp-validation-for="TwitterLink" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Bio" class="control-label text-white"></label>
                <textarea asp-for="Bio" class="form-control" readonly  rows="3"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top:20px;display:flex;flex-direction:row;">
                <a class="btn btn-outline-secondary" asp-action="Index">Back To List</a>

                <form asp-action="Delete" method="post" style="margin-left:5px;">
                    <input hidden asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger float-right" />
                </form>

            </div>


        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ProfilePicturePreview");
            output.src = $("#ProfilePictureURL").val();

        })
    </script>
}